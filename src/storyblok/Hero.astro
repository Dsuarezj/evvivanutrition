---
import { storyblokEditable } from '@storyblok/astro'
import { Image } from "astro:assets"
import { renderRichText } from "@storyblok/js";


 const { blok } = Astro.props;
 ---

 <div {...storyblokEditable(blok)}>
   <section class="section pb-[50px] pt-[10px]">
    <div class="container max-w-[1600px]">
      <div class="row text-center">
        <div class="mx-auto lg:col-10">
          {
            blok.banner[0]?.image && (
              <Image
                class="mx-auto mt-12"
                src={blok.banner[0]?.image}
                width={750}
                height={390}
                alt="banner image"
              />
            )
          }
          {
            blok.banner[0]?.content && (
              <p class="mt-4" set:html={renderRichText(blok.banner[0].content)} />
            )
          }
          {
            blok.banner[0]?.button[0]?.enable && (
              <a class="btn btn-primary mt-4" href={blok.banner[0].button[0].link} target="_blank">
                {blok.banner[0].button[0].label}
              </a>
            )
          }
        </div>
      </div>
    </div>
  </section>
 </div>
